<h1>My protfolio</h1>
<div class="search-area">

  <h3>Search stocks</h3>
  <%= form_tag search_stock_path,remote:true, method: :get do %>
  <div class="form-group row">
    <div class="col-sm-9 no-right-padding">
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofoucs:true, class: "form-control form-control-lg" %>
    </div>
    <div class="col-sm-3 no-left-padding">
      <%= button_tag type: :submits, class: "btn btn-success" do %>
      <%= fa_icon 'search 2x' %>
    <% end %>
  </div>
</div>
<% end %>
</div>
<div class="" id="result" style="margin-bottom:1rem">

</div>

<% if !@tracked_stocks.empty? %>
 <%= render 'stocks/list'%>
<% end %>
