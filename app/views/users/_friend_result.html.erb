<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <% @friends.each do |friend| %>
  <div class="card card-header results-block mt-1">
    <strong>Name: </strong> <%= friend.full_name %>
    <strong>Email: </strong> <%= friend.email %>
    <strong>Action: </strong> <%= link_to "View Profile",user_path(friend),class: "btn btn-sm btn-success" %>
    <% if current_user.not_friends_with?(friend.id) %>
    <%= link_to 'Follow friend?', friendships_path(friend: friend),
      class: "btn btn-sm btn-success", method: :post %>
      <% else %>
      <span class="badge badge-secondary"> You are friends</span>
      <% end %>
  </div>

    <% end %>
<% end %>
